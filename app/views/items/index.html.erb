<div class="sub-container">
<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table class="striped">
  <thead>
    <tr>
      <th>Image</th>
      <th>Brand</th>
      <th>Model</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
          <td>
            <% if item.images.attached? %>
              <%= cl_image_tag(item.images[0].key, :width=>100, :crop=>"fit") %>
            <% end %>
          </td>
          <td><%= link_to item.brand, item %></td>
          <td><%= link_to item.model, item %></td>
          <td><%= link_to item.description, item %></td>
          <td><%= link_to item.price, item %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>