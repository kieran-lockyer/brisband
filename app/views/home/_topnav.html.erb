<!-- Dropdown Structure -->
<ul id="dropdown1" class="dropdown-content">
    <% if user_signed_in? %>
        <li><%= link_to 'Account', current_user %></li>
        <li><%= link_to 'Conversations', inbox_conversations_path %></li>
        <% if current_user.mailbox.inbox.unread(current_user).count > 0 %>
            <li><%= current_user.mailbox.inbox.unread(current_user).count %> Unread Messages</li>
        <% end %>
        <li><%= link_to 'Log out', destroy_user_session_path, method: :delete %></li>
    <% end %>
</ul>

<!-- Nav Bar -->
<nav class="navbar purple">
    <div class="nav-wrapper container">
        <%= link_to 'BrisBand', home_index_path, class: "brand-logo" %>
        <a href="#" data-target="mobile" class="sidenav-trigger"><i class="material-icons">menu</i></a>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
            <li><%= link_to 'Gear', items_path %></li>
            <li><%= link_to 'Bands', bands_path %></li>
            <li><%= link_to 'Jams - COMING SOON!', root_path %></li>
            <li><%= link_to 'Gigs - COMING SOON!', root_path %></li>
            <% if user_signed_in? %>
                <li>
                    <a class="dropdown-trigger" href="#!" data-target="dropdown1"><%= current_user.name %>  
                        <i class="material-icons right">arrow_drop_down</i>
                    </a>
                </li>
            <% else %>
                <li><%= link_to 'Sign up', new_user_registration_path %></li>
                <li><%= link_to 'Log in', new_user_session_path %></li>
            <% end %>
        </ul>
    </div>
</nav>

