<div class="sub-container">
  <p id="notice"><%= notice %></p>

  <h1>Artists</h1>

  <table>
    <thead>
      <tr>
        <th>Image</th>
        <th>Name</th>
        <th>Bio</th>
        <th>Genre</th>
        <th>Status</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @bands.each do |band| %>
        <tr>
          <td>
            <% if band.images.attached? %>
              <%= cl_image_tag(band.images[0].key, :width=>100, :crop=>"fit") %>
            <% end %>
          </td>
          <td><%= link_to band.name, band %></td>
          <td><%= link_to band.bio, band %></td>
          <td><%= link_to band.genre, band %></td>
          <td>
              <% if band.status == true %>
                  Active
              <% else %>
                  Not Active
              <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
</div>